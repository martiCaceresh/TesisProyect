		<script>
			const passwordInput = document.querySelector('input[type="password"]');
			const confirmPasswordInput = document.querySelector('input[name="Input.ConfirmPassword"]');
			const passwordToggleIcon = document.getElementById("password-toggle");
			const confirmPasswordToggleIcon = document.getElementById("confirm-password-toggle");

			// Agrega un evento de escucha al icono de Password
			passwordToggleIcon.addEventListener("click", function () {
				togglePasswordVisibility(passwordInput, passwordToggleIcon);
			});

			// Agrega un evento de escucha al icono de ConfirmPassword
			confirmPasswordToggleIcon.addEventListener("click", function () {
				togglePasswordVisibility(confirmPasswordInput, confirmPasswordToggleIcon);
			});

			function togglePasswordVisibility(inputElement, toggleIcon) {
				if (inputElement.type === "password") {
					inputElement.type = "text";
					toggleIcon.classList.remove("fa-eye");
					toggleIcon.classList.add("fa-eye-slash");
				} else {
					inputElement.type = "password";
					toggleIcon.classList.remove("fa-eye-slash");
					toggleIcon.classList.add("fa-eye");
				}
			}

		</script>



		<script>
			const imgAnimada = document.getElementById('logoAnimadoWhite');
			const imgEstatico = document.getElementById('logoEstaticoWhite');

			// Función para cambiar la imagen al pasar el mouse por encima
			function cambiarAlPasarMouse() {
				const img = document.getElementById('logoWhite');
				img.src = imgAnimada.src;
			}

			// Función para cambiar la imagen al dejar de pasar el mouse por encima
			function cambiarAlSalirMouse() {
				const img = document.getElementById('logoWhite');
				img.src = imgEstatico.src;
			}

			// Función para cambiar la imagen después de ciertos segundos
			function cambiarDespuesDeSegundos() {
				const img = document.getElementById('logoWhite');
				img.src = img.src;
				setTimeout(function () {
					img.src = imgEstatico.src;
					// Agregar eventos al elemento de la imagen

					img.addEventListener('mouseover', cambiarAlPasarMouse);
					img.addEventListener('mouseout', cambiarAlSalirMouse);
				}, 4000); // Cambiar después de 4 segundos (4000 milisegundos)
			}

			cambiarDespuesDeSegundos();


		</script>

