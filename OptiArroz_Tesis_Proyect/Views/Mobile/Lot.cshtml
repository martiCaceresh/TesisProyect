@model OptiArroz_Tesis_Proyect.Models.ViewModels.RiceLotDetailVM

@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cards Responsivas con Bootstrap</title>
    <!-- Vincular Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .content {
            min-height: 100%; /* Hace que el contenido ocupe al menos toda la altura de la pantalla */
            padding-bottom: 60px; /* Deja espacio para el footer fijo */
        }

        .footer {
            background-color: #f8f9fa;
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            text-align: center;
            padding: 10px 0;
        }

            .footer a {
                color: #495057;
                text-decoration: none;
                font-size: 1.5rem;
            }

                .footer a:hover {
                    color: #007bff;
                }

            .footer .fa {
                margin: 0 10px;
                font-size: 2rem;
            }
    </style>
</head>
<body>
    <div class="container my-4">
        <!-- Primera Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h2>Lote @Model.RiceLotDetailDTO.Code</h2>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Fila 1, Columna 1 -->
                    <div class="col-12 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6 col-sm-4">
                                        <label class="form-label text-secondary">Fecha de Recepción</label>
                                        <label class="d-block">@Convert.ToDateTime(Model.RiceLotDetailDTO.ReceptionDate).ToString("dd/MM/yyyy")</label>
                                    </div>
                                    <div class="col-6 col-sm-4">
                                        <label class="form-label text-secondary">Fecha de Vencimiento</label>
                                        <label class="d-block">@Convert.ToDateTime(Model.RiceLotDetailDTO.ExpirationDate).ToString("dd/MM/yyyy")</label>
                                    </div>
                                    <!-- Obligar a las siguientes columnas a pasar a una nueva línea en el breakpoint md y hacia arriba -->
                                    <div class="w-100 d-none d-md-block"></div>

                                    <div class="col-6 col-sm-4">
                                        <label class="form-label text-secondary">Última Ubicación</label>
                                        <label class="d-block">@Model.RiceLotDetailDTO.LastUbication</label>
                                    </div>
                                    <div class="col-6 col-sm-4">
                                        <label class="form-label text-secondary">Clasificación</label>
                                        <label class="d-block">@Model.RiceLotDetailDTO.IdClassification</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Fila 1, Columna 2 -->
                    <div class="col-12 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6 col-sm-4">
                                        <label class="form-label text-secondary">Stock Inicial</label>
                                        <label class="d-block">@Model.RiceLotDetailDTO.InitialQuantity</label>
                                    </div>
                                    <div class="col-6 col-sm-4">
                                        <label class="form-label text-secondary">Stock Actual</label>
                                        <label class="d-block">@Model.RiceLotDetailDTO.LeftoverQuantity</label>
                                    </div>
                                    <!-- Obligar a las siguientes columnas a pasar a una nueva línea en el breakpoint md y hacia arriba -->
                                    <div class="w-100 d-none d-md-block"></div>

                                    <div class="col-6 col-sm-4">
                                        <label class="form-label text-secondary">Estado del Lote</label>
                                        <label class="d-block">@Model.RiceLotDetailDTO.State</label>
                                    </div>
                                    <div class="col-6 col-sm-4">
                                        <label class="form-label text-secondary"></label>
                                        <label class="d-block"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <!-- Fila 2, Columna 1 -->
                    <div class="col-12 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6 col-sm-4">
                                        <label class="form-label text-secondary">Creado Por</label>
                                        <label class="d-block">@Model.RiceLotDetailDTO.CreatedBy</label>
                                    </div>
                                    <div class="col-6 col-sm-4">
                                        <label class="form-label text-secondary">Fecha Registro</label>
                                        <label class="d-block">@Convert.ToDateTime(Model.RiceLotDetailDTO.CreatedAt).ToString("dd/MM/yyyy")</label>
                                    </div>
                                    <!-- Obligar a las siguientes columnas a pasar a una nueva línea en el breakpoint md y hacia arriba -->
                                    <div class="w-100 d-none d-md-block"></div>

                                    <div class="col-6 col-sm-4">
                                        <label class="form-label text-secondary">Modificado Por</label>
                                        <label class="d-block">@Model.RiceLotDetailDTO.UpdatedBy</label>
                                    </div>
                                    <div class="col-6 col-sm-4">
                                        <label class="form-label text-secondary">Fecha Modificación</label>
                                        <label class="d-block">@Convert.ToDateTime(Model.RiceLotDetailDTO.UpdatedAt).ToString("dd/MM/yyyy")</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-4 mb-3">
                    <a href="#" class="d-block">
                        <i class="fas fa-home"></i>
                        <span class="d-block">Movimiento</span>
                    </a>
                </div>
                <div class="col-4 mb-3">
                    <a href="#" class="d-block">
                        <i class="fas fa-info-circle"></i>
                        <span class="d-block">Scaner</span>
                    </a>
                </div>
                <div class="col-4 mb-3">
                    <a href="#" class="d-block">
                        <i class="fas fa-phone-alt"></i>
                        <span class="d-block">Cerrar Sesión</span>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Vincular el script de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>