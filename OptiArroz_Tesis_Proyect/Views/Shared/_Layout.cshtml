	<script>
	//Función para obtener las notificaciones de la bd antes de cargar la página
	function getNotifications() {
	$.ajax({
	type: 'GET',
	url: '/Home/GetNotificationData',
	contentType: false,
	processData: false,
	success: function (notifications) {
	var notificationsCount = 0;
	$('.notifications').empty();

	notifications.forEach(function (notification) {
	createNotificationElement(notification.message, notification.createdAt, notification.notificationType, notification.isRead, notification.url, notification.id);

	// Incrementar el contador de notificaciones
	if (!notification.isRead) { notificationsCount++; }
	});

	var notificationCountElement = document.getElementById('notification-count');
	// Actualizar el contenido del elemento con el nuevo número
	if (notificationsCount > 99) {
	notificationsCount = 99;
	}
	notificationCountElement.textContent = notificationsCount.toString();
	},
	error: function (error) {
	console.log(error);
	}
	});
	}

	function createNotificationElement(message, createdAt, notificationType, isRead, url, id) {
	// Calcular la diferencia de tiempo
